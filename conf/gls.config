/*
 * -------------------------------------------------
 *  nf-core/scflow Nextflow base config file
 * -------------------------------------------------
 * A 'blank slate' config file, appropriate for general
 * use on most high performace compute environments.
 * Assumes that all software is installed and available
 * on the PATH. Runs in `local` mode - all jobs will be
 * run on the logged in environment.
 */

process {

  // TODO nf-core: Check the defaults for all processes
  //cpus = { check_max( 1 * task.attempt, 'cpus' ) }
  //memory = { check_max( 7.GB * task.attempt, 'memory' ) }
  //time = { check_max( 4.h * task.attempt, 'time' ) }

  //container = 'combiz/scflow-docker:0.5.0'
  container = 'eu.gcr.io/terra-scflow/scflow-docker:0.5.0'
  
  errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
  maxRetries = 1
  maxErrors = '-1'

  // Process-specific resource requirements
  // NOTE - Only one of the labels below are used in the fastqc process in the main script.
  //        If possible, it would be nice to keep the same label naming convention when
  //        adding in your processes.
  // TODO nf-core: Customise requirements for specific processes.
  // See https://www.nextflow.io/docs/latest/config.html#config-process-selectors
  withLabel:process_local {
    executor = 'local'
  }
  withLabel:process_tiny {
    machineType = 'n1-standard-4'
  }
  withLabel:process_low {
    machineType = 'n1-standard-4'
  }
  withLabel:process_medium {
    machineType = 'n1-standard-16'
  }
  withLabel:process_high {
    machineType = 'n1-standard-32'
  }
  withLabel:process_long {
    machineType = 'n1-highmem-32'
  }
  withLabel:process_large {
    machineType = 'n1-highmem-32'
  }
  withName:get_software_versions {
    cache = false
  }
}
params {
  ensembl_mappings = '/home/combizkhozoie/scflowexamplegcp/scFlowResources/src/ensembl-ids/ensembl_mappings.tsv'
  manifest = '/home/combizkhozoie/scflowexamplegcp/conf/Manifest.txt'
  samplesheet = '/home/combizkhozoie/scflowexamplegcp/conf/SampleSheet.tsv'
  ctd_folder = '/home/combizkhozoie/scflowexamplegcp/scFlowResources/refs/ctd'
  celltype_mappings = '/home/combizkhozoie/scflowexamplegcp/conf/celltype_mappings.tsv'
  reddim_genes_yml = '/home/combizkhozoie/scflowexamplegcp/conf/reddim_genes.yml'
}
  
profiles {
gls {
      process.executor = 'google-lifesciences'
      workDir = 'gs://scflownf/scflowtest/'
      google.region  = 'europe-west4'
      google.location = 'europe-west2'
      google.project = 'terra-scflow'
      //google.lifeSciences.usePrivateAddress = true
      google.lifeSciences.bootDiskSize = 100.GB
  }
}
